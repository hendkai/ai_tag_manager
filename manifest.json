{
  "manifest_version": 2,
  "name": "AI Tag Manager",
  "version": "1.1.3",
  "description": "AI-powered automatic management of Thunderbird tags - Merge similar tags, intelligent cleanup and more",
  "author": "Hendrik Kai",

  "browser_specific_settings": {
    "gecko": {
      "id": "ai-tag-manager@hendkai.com",
      "strict_min_version": "91.0"
    }
  },

  "permissions": [
    "storage",
    "tabs",
    "messagesRead",
    "messagesTags",
    "messagesUpdate",
    "accountsRead"
  ],

  "background": {
    "scripts": ["scripts/background.js"]
  },

  "browser_action": {
    "default_title": "AI Tag Manager",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png"
    }
  },

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  }
}
